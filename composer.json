{
    "name": "remcosmits/backend-framework",
    "description": "Lightweight PHP Framework. Includes fast and secure Database QueryBuilder, Advanced Routing with dynamic routes(middleware, grouping, prefix)",
    "autoload": {
        "psr-4": {
            "Framework\\": "src/"
        },
        "files": [
            "src/helperFunctions.php"
        ]
    },
    "autoload-dev":{
        "psr-4": {
            "Framework\\tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Remco Smits",
            "email": "djsmits12@gmail.com",
            "role": "Developer"
        }
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit tests"
    },
    "license": "MIT",
    "require": {
        "opis/closure": "^3.6",
        "php-curl-class/php-curl-class": "^9.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1.2"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}